				NTP_DoPrecast();
				if(!NTA_ClearLevel()) {
					NTC_SendMsgToScript("NTBotGame.ntj", "NTA_ClearLevel()");
					return;
				} break;
		}
		NTP_DoPrecast();
		if(NTConfig_OpenEvilUrnOrChests == 1 || NTConfig_OpenEvilUrnOrChests == 2)
