var Script = {
	Check: function () {
		return SendCopyData("D2NT Manager", null, (9 << 16) | 0, "Script file loaded...");
	},

	Load: function (path) {
		if (File.Exists(path)) {
			Load(path);
		}
	},

	Loaded: function (scriptname) {
		var _script;

		_script = this.Find(scriptname);
		if (_script) {
			if (_script.running) {
				return true;
			}
		}

		return false;
	},

	Find: function (scriptname) {
		var _script,
			_scriptpath;

		if(scriptname == undefined){ // added for leave with leader mod
			return false;
		}

		_script = GetScript();

		if (_script) {
			do {
				_scriptpath = _script.name.toLowerCase();

				if (_scriptpath.indexOf(scriptname.toLowerCase()) != -1) {
					return _script;
				}
			} while(_script.GetNext());
		}

		return null;
	},

	SendMsg: function (scriptname, msg) {
		var _script = this.Find(scriptname);

		if(_script) {
			return _script.Send(msg);
		}

		return false;
	}
};